        android:id="@+id/tvitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivicon"
        android:textSize="25sp"
        android:layout_marginLeft="7dp"
        android:text="something"/>
</RelativeLayout>